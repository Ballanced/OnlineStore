@model IEnumerable<OnlineStore.Models.Product>

<h2>Product List</h2>

@foreach (var product in Model)
{
    <div>
        <h3>@Html.DisplayFor(modelItem => product.Name)</h3>
        <p>@Html.DisplayFor(modelItem => product.Description)</p>
        <p>Price: @Html.DisplayFor(modelItem => product.Price)</p>
        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
        <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@product.Id" class="btn btn-secondary">Add to Cart</a>
    </div>
}
